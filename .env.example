# MOLECULAI Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# OAuth/OIDC (Optional)
OAUTH_ENABLED=false
OAUTH_PROVIDER=google
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# SAML SSO (Optional)
SAML_ENABLED=false
SAML_ENTRY_POINT=https://sso.example.com/saml
SAML_ISSUER=moleculai
SAML_CERT=path/to/cert.pem

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=moleculai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSL=false
POSTGRES_URL=postgresql://postgres:password@localhost:5432/moleculai

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Microservices URLs
MCP_SERVER_URL=http://localhost:4000
RENDERER_URL=http://localhost:5000
COMPUTE_WORKER_URL=http://localhost:6000

# Storage (S3 Compatible)
STORAGE_TYPE=s3
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=moleculai-assets
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Local storage (alternative to S3)
# STORAGE_TYPE=local
# STORAGE_PATH=/data/moleculai

# File Upload
MAX_UPLOAD_SIZE=100mb
ALLOWED_FILE_TYPES=pdb,cif,sdf,mol2,xyz,dcd,trr,xtc

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WEBSOCKET_MAX=100

# Session
SESSION_TIMEOUT=86400000
SESSION_COOKIE_SECURE=false

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Monitoring & Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE=logs/moleculai.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Email (for notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@moleculai.example.com
SMTP_PASSWORD=
SMTP_FROM=MOLECULAI <notifications@moleculai.example.com>

# Webhooks
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://hooks.example.com/moleculai

# Feature Flags
FEATURE_COLLABORATION=true
FEATURE_SIMULATIONS=true
FEATURE_TRAJECTORIES=true
FEATURE_PLUGINS=true
FEATURE_VR=false

# Compute Worker
COMPUTE_MAX_CONCURRENT_JOBS=5
COMPUTE_JOB_TIMEOUT=3600000
COMPUTE_SLURM_ENABLED=false
COMPUTE_SLURM_HOST=

# Renderer Service
RENDERER_GPU_ENABLED=true
RENDERER_MAX_RESOLUTION=4096
RENDERER_BATCH_SIZE=10

# Security
ENABLE_FILE_SCANNING=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true

# API Versioning
API_VERSION=v1
API_DEPRECATION_NOTICE=false

# Development
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/moleculai_test
TEST_REDIS_URL=redis://localhost:6379/1

# Third-party Integrations
RCSB_PDB_API=https://data.rcsb.org/rest/v1
PUBCHEM_API=https://pubchem.ncbi.nlm.nih.gov/rest/pug
RDKIT_ENABLED=true

# Kubernetes (for production)
K8S_NAMESPACE=moleculai
K8S_SERVICE_NAME=api-gateway
K8S_POD_NAME=

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest
