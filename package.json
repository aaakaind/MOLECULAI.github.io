{
  "name": "moleculai",
  "version": "1.0.0",
  "description": "Molecule and chemical reaction visualization tool",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "echo 'Linting not configured yet'",
    "docker:build": "cd infrastructure/docker && docker-compose build",
    "docker:up": "cd infrastructure/docker && docker-compose up -d",
    "docker:down": "cd infrastructure/docker && docker-compose down",
    "docker:logs": "cd infrastructure/docker && docker-compose logs -f",
    "k8s:install": "helm install moleculai ./infrastructure/kubernetes --namespace moleculai --create-namespace",
    "k8s:upgrade": "helm upgrade moleculai ./infrastructure/kubernetes",
    "k8s:uninstall": "helm uninstall moleculai --namespace moleculai",
    "services:api-gateway": "cd services/api-gateway && npm start",
    "services:mcp": "cd services/mcp-collaboration && npm start",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "molecule",
    "visualization",
    "chemistry",
    "3d"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}
